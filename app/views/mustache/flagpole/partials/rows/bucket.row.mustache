<tr id="{{row.id}}">
  <td width=35%>
    <p>{{row.name}}</p>
    <small class="muted">{{row.id}}</small>
  </td>
  <td>{{row.description}}...</td>
  <td width=15%>
    {{#row.value}}
      <a class="btn btn-success pull-right" class="bucketToggleButton"><i class="icon-bolt"></i> Enabled</a>
    {{/row.value}}
    {{^row.value}}
      <a class="btn btn-inverse pull-right" class="bucketToggleButton"><i class="icon-off"></i> Disabled</a>
    {{/row.value}}
  </td>
</tr>
