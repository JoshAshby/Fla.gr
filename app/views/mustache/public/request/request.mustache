<div class="row">
  <div class="span6 offset3">
    <h2>Request an Invite</h2>
    <form class="form form-horizontal" method="POST" action="/request">
      <div class="control-group {{#emailError}}error{{/emailError}}">
        <input type="email" placeholder="email..." name="email" class="span6" value="{{email}}" required>
        <span class="help-block">We need your email to send you the link to finish registering, once a spot for your invite opens up.</span>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i> Request invite!</button>
      </div>
    </form>
  </div>
</div>
