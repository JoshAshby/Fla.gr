        </div>
        <div class="control-group #if $getVar('passwordError', False)#error#end if#">
            <input type="password" placeholder="password" name="password" class="span6">
            <input type="password" placeholder="renter password" name="passwordTwice" class="span6">
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Make user</button>
        </div>

