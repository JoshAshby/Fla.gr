#extends views.admin.adminSkeleton

#def body
<div id="modal"></div>
<ul class="breadcrumb">
    You are here:<span class="divider"></span>
    <li><a href="/admin">Admin Panel</a> <span class="divider">/</span></li>
    <li class="active">Requests</li>
</ul>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th><button type="button" class="btn bulkRequestCheck btn-mini" data-toggle="button"><i class="icon-check-empty"></i></button></th>
            <th>Email</th>
            <th>Date Requested</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    #for $request in $requests
        <tr>
            <td>  <input type="checkbox" value="$request.id" class="bulkCheckbox"></td>
<!--            <td><a href="/admin/requests/$request.id">$request.email[:50]</a></td> -->
            <td>$request.email</td>
            <td>$request.formatedDate</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary requestGrantButton" data-id="$request.id" data-email="$request.email"><i class="icon-ok"></i> Grant</button>
                    <button class="btn btn-inverse requestDeleteButton" data-id="$request.id" data-email="$request.email"><i class="icon-trash"></i></button>
                </div>
            </td>
        </tr>
    #end for
    </tbody>
</table>
#end def
