#extends views.admin.adminSkeleton

#def body
<ul class="breadcrumb">
    You are here:<span class="divider"></span>
    <li><a href="/admin">Admin Panel</a> <span class="divider">/</span></li>
    <li class="active">Templates</li>
</ul>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th><button type="button" id="bulkCheckButton" class="btn btn-mini" data-toggle="button"><i class="icon-check-empty"></i></button></th>
            <th>Name</th>
            <th>Description</th>
            <th>Last Updated</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
    #for $tmpl in $templates
        <tr>
            <td>  <input type="checkbox" value="$tmpl.id" class="bulkCheckbox"></td>
            <td><a href="/admin/templates/$tmpl.id">$tmpl.name[:50]</a></td>
            <td>$tmpl.description[:250]</td>
            <td>$tmpl.formatedDate</td>
            <td>$tmpl.type</td>
        </tr>
    #end for
    </tbody>
</table>
#end def
