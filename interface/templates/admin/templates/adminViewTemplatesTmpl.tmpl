#extends views.admin.adminSkeleton

#def leftExtra
<div class="tabbable tabs-left">
    <ul class="nav nav-tabs" id="sidebarTabs">
        <li class="active"><a href="#all"><i class="icon-info-sign"></i> All</a></li>
        <li><a href="#settings"><i class="icon-cog"></i> Settings</a></li>
    </ul>
    <b class="muted">Selected</b>
    <a href="#" id="deleteButton" style="margin-top:10px; margin-left:10px" class="btn btn-inverse"><i class="icon-trash"></i> Delete</a>
</div>
#end def


#def body
<ul class="breadcrumb">
    You are here:<span class="divider"></span>
    <li><a href="/admin">Admin Panel</a> <span class="divider">/</span></li>
    <li class="active">Templates</li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="all">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th><button type="button" id="bulkCheckButton" class="btn btn-mini" data-toggle="button"><i class="icon-check-empty"></i></button></th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Last Updated</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
            #for $tmpl in $templates
                <tr>
                    <td>  <input type="checkbox" value="$tmpl.id" class="bulkCheckbox"></td>
                    <td><a href="/admin/templates/$tmpl.id">$tmpl.name[:50]</a></td>
                    <td>$tmpl.description[:250]</td>
                    <td>$tmpl.formatedDate</td>
                    <td>$tmpl.type</td>
                </tr>
            #end for
            </tbody>
        </table>
    </div>
    <div class="tab-pane" id="settings">
        <form class="form form-horizontal" action="/admin/templates/settings" method="POST">
            <div class="control-group">
                <div class="well">
                    <b class="muted">Types: </b> <span id="dynamicList"></span>
                </div>
                <input type="text" id="addInputField" class="span5" placeholder="types...">
                <a id="addButton" class="btn btn-primary"><i class="icon-plus"></i></a>
                <span class="help-block"></span>
                <input type="hidden" name="addInput" id="addInputHidden" value='$getVar('templateTypes', '')'>

            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save Settings</button>
            </div>
        </form>
    </div>
</div>
#end def
