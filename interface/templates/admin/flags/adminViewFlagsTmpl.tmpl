#extends views.admin.adminSkeleton

#def body
<ul class="breadcrumb">
    You are here:<span class="divider"></span>
    <li><a href="/admin">Admin Panel</a> <span class="divider">/</span></li>
    <li class="active">Flags</li>
</ul>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Title</th>
            <th>User</th>
            <th>Created</th>
            <th>Visibility</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    #for $flag in $flags
        <tr>
            <td><a href="/admin/flags/edit/$flag.id">$flag.title</a></td>
            <td><a href="/admin/users/edit/$flag.userID">$flag.formateduserID.username</a></td>
            <td>$flag.formatedDate</td>
            <td>
                #if $flag.visibility
                    <span class="label"><i class="icon-unlock"></i> Public</span>
                #else
                    <span class="label"><i class="icon-lock"></i> Private</span>
                #end if
            </td>
            <td>
                <!-- This needs to be updated when reporting a flag becomes something -->
                <span class="label"><i class="icon-circle"></i> Normal<span>
            </td>
        </tr>
    #end for
    </tbody>
</table>
#end def
