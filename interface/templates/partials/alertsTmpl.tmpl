#def infoAlert($quip, $message)
    <div class="alert alert-info #if len($message) > 160#alert-block#end if#">
        <button type="button" class="close" data-dismiss="alert"><i class="icon-remove-sign"></i></button>
        #if len($message) > 160
            <h4><i class="icon-info-sign"></i> $quip</h4>
            $message
        #else
            <i class="icon-info-sign"></i> <strong>$quip</strong> $message
        #end if
    </div>
#end def

