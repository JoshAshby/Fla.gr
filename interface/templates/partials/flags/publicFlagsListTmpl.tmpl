#@staticmethod
#def publicFlagsList($flags, $user, $pageURL)
    #for $flag in $flags.getItems
        <!-- Start of flag overview template -->
        <div class="row">
            <div class="span6">
                <h2>
                    <a href="/flags/$flag.id" class="flagLink"><i class="icon-flag"></i> $flag.title</a>
                    <small>
                        <b class="muted"> By #if $flag.userID == $user.id#you!#else#<a class="muted" href="/user/$flag.author.username">$flag.author.username</a>#end if#</b>
                    </small>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="span6">
                <div class="well">
                <span class="muted"><i class="icon-calendar"></i> $flag.formatedDate</span>
                #if not $flag.visibility
                    <span class="label"><i class="icon-lock"></i> Private</span>
               #else
                    <span class="label"><i class="icon-unlock"></i> Public</span>
                #end if
                #if  $flag.userID == $user.id
                     <div class="btn-group pull-right">
                        <a href="/flags/$flag.id/edit" class="btn btn-info"><i class="icon-edit"></i></a>
                        <a href="/flags/$flag.id/delete" class="btn btn-danger"><i class="icon-trash"></i></a>
                    </div>
                #end if
                </div>
            </div>
        </div>
        <div class="row">
            <div class="span6">
            $flag.formatedDescription[:160]
            </div>
        </div>
        <div class="row">
            <div class="span6">
                #if $flag.labels and $flag.labels != [""]
                    <b class="muted"><i class="icon-tags"></i> Labels: </b>
                    #for $label in $flag.labels
                        <a href="/labels/$label"><span class="label label-info">$label</span></a>
                    #end for
                #end if
            </div>
        </div>
        <div class="row">
            <div class="span6">
                #if $flag.url
                    <b class="muted"><i class="icon-external-link"></i> Link: </b> <a href="$flag.url">$flag.url</a><br>
                #end if
            </div>
        </div>
        <hr>
        <!-- End of flag overview template -->
    #end for
    <div class="pagination pagination-centered">
        <ul>
            #if $flags.hasPrev
                <li><a href="$pageURL?p=${flags.currentPage-1}">&laquo;</a></li>
            #else
                <li class="disabled"><span>&laquo;</span></li>
            #end if
            #for $item in $flags.listPages()
                <li #if $item == $flags.currentPage#class="active"#end if#><a href="$pageURL?p=$item">$item</a></li>
            #end for
            #if $flags.hasNext
                <li><a href="$pageURL?p=${flags.currentPage+1}">&raquo;</a></li>
            #else
                <li class="disabled"><span>&raquo;</span></li>
            #end if
        </ul>
    </div>
#end def
